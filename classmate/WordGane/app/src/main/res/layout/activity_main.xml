<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">


    <ImageView
        android:id="@+id/DefMph"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:visibility="visible"
        android:layout_height="match_parent"/>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_gravity="top"
        android:layout_height="450dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:background="@drawable/shape_for_bar"
            android:layout_height="?actionBarSize">
            
            
            <TextView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:text="Level : 5"
                android:layout_gravity="center|start"
                android:letterSpacing="0.1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/coin"
                android:layout_width="wrap_content"
                android:text="Coin"
                android:drawableStart="@drawable/baseline_monetization_on_24"
                android:drawablePadding="5dp"
                android:textSize="25sp"
                android:layout_gravity="end|center"
                android:layout_marginEnd="20dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
            
        </FrameLayout>

        <GridLayout
            android:id="@+id/imageGroup"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:columnCount="2"
            android:padding="5dp"
            android:layout_height="wrap_content">


            <com.google.android.material.imageview.ShapeableImageView

                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="2.5dp"
                android:layout_marginBottom="2.5dp"
                app:shapeAppearanceOverlay="@style/circleImageView"
                android:scaleType="centerCrop" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="2.5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                app:shapeAppearanceOverlay="@style/circleImageView"
                android:layout_marginBottom="2.5dp"
                android:scaleType="centerCrop"
                />

            <com.google.android.material.imageview.ShapeableImageView

                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginEnd="2.5dp"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/circleImageView" />


            <com.google.android.material.imageview.ShapeableImageView

                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="2.5dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/circleImageView"
                />


        </GridLayout>



    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_height="320dp">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_gravity="start"
           android:layout_height="wrap_content">

           <TextView
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:id="@+id/helpBtn"
               android:layout_width="75dp"
               android:drawableStart="@drawable/baseline_help_center_24"
               android:text="HELP"
               android:textColor="@color/white"
               android:layout_gravity="start"
               android:layout_marginStart="25dp"
               android:layout_marginBottom="10dp"
               android:gravity="center"
               android:padding="5dp"
               android:background="#5E000000"
               android:layout_height="50dp"/>

           <ImageView
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_width="48dp"
               android:id="@+id/clear_btn"
               android:layout_height="48dp"
               android:src="@drawable/ic_clear"
               android:layout_gravity="end" />

       </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/answerGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                style="@style/textViewSize"
                />

            <TextView
                style="@style/textViewSize"
                />
            <TextView
                style="@style/textViewSize"
                />
            <TextView
                style="@style/textViewSize"
                />
            <TextView
                style="@style/textViewSize"
                />
            <TextView
                style="@style/textViewSize"
                />

        </LinearLayout>

        <GridLayout
            android:id="@+id/variantGroup"
            android:layout_marginTop="40dp"
            android:columnCount="6"
            android:rowCount="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                style="@style/textViewSize"
                />
            <TextView
                style="@style/textViewSize"
                />
            <TextView
                style="@style/textViewSize"
                />
            <TextView
                style="@style/textViewSize"
                />
            <TextView
                style="@style/textViewSize"
                />
            <TextView
                style="@style/textViewSize"
                />
            <TextView
                style="@style/textViewSize"
                />
            <TextView
                style="@style/textViewSize"
                />
            <TextView
                style="@style/textViewSize"
                />
            <TextView
                style="@style/textViewSize"
                />
            <TextView
                style="@style/textViewSize"
                />
            <TextView
                style="@style/textViewSize"
                />


        </GridLayout>


    </LinearLayout>


</FrameLayout>