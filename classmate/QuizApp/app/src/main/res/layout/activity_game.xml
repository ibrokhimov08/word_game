<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:background="@drawable/background3"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:layout_gravity="top|center"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/shape3"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="520dp"/>
    <FrameLayout
        android:layout_gravity="top|center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape2"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="510dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="top|center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/shape"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:text="7/10"
                android:textSize="20sp"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/baseline_check_circle_24"
                android:fontFamily="sans-serif-black"
                android:layout_gravity="center|start"
                android:layout_marginStart="25dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/coin"
                android:layout_width="wrap_content"
                android:text="224"
                android:textSize="20sp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:drawableStart="@drawable/baseline_attach_money_24"
                android:fontFamily="sans-serif-black"
                android:layout_gravity="center|end"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="6"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="erfd w rfesd wesr fe rgdg wq www ewf fewfsdsd fvsdx sdfxergrfgr ewefegdg ef"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"/>

      <RadioGroup
          android:id="@+id/radioGroup"
          android:layout_margin="15dp"
          android:gravity="center"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <RadioButton
              android:background="@drawable/retoi"
              android:button="@null"
              android:textSize="18sp"
              android:gravity="center"
               android:layout_marginBottom="8dp"
              android:text="Samascsa"
              android:textColor="@color/white"
              android:layout_width="match_parent"
              android:layout_height="50dp"/>
          <RadioButton
              android:background="@drawable/retoi"
              android:button="@null"
              android:textSize="18sp"
              android:gravity="center"
              android:layout_marginBottom="8dp"
              android:text="dasasdx"
              android:textColor="@color/white"
              android:layout_width="match_parent"
              android:layout_height="50dp"/>

          <RadioButton
              android:background="@drawable/retoi"
              android:button="@null"
              android:textSize="18sp"
              android:gravity="center"
              android:layout_marginBottom="8dp"
              android:text="dwas"
              android:textColor="@color/white"
              android:layout_width="match_parent"
              android:layout_height="50dp"/>
          <RadioButton
              android:background="@drawable/retoi"
              android:button="@null"
              android:gravity="center"
              android:textSize="18sp"
              android:layout_marginBottom="8dp"
              android:text="gfvvc"
              android:textColor="@color/white"
              android:layout_width="match_parent"
              android:layout_height="50dp"/>
      </RadioGroup>
        




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_game"
        android:text="How to play ?"
        android:textAllCaps="false"
        android:textSize="10sp" >

        <Button
            android:id="@+id/nextButton"
            android:text="NEXT"
            android:textSize="15dp"
            android:scaleY="1"
            android:scaleX="1.3"
            android:layout_width="wrap_content"
            android:background="@drawable/buttonn"
            android:layout_gravity="center"
           android:layout_marginStart="135dp"
            android:layout_height="35dp"/>

    </LinearLayout>

</FrameLayout>